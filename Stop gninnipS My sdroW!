//Takes a string and returns the same string, but with all words with 5 or more characters reversed.

def spin_words(string) 
  output = ""
  string.split.each {|word|
    if word.length > 4
      output = output + "#{word.reverse} "
    else
      output = output + "#{word} "
    end
  }
  output.strip
  
end
